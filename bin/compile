#!/usr/bin/env bash

bp_dir=$(cd $(dirname $0); cd ..; pwd)

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

# Load some convenience functions like status(), echo(), and indent()
source $bp_dir/lib/common.sh

# Run subsequent commands from the build path
cd $build_dir

# Check and run web pack
(
    if [ -f $build_dir/webpack.config.js ]; then
        if [ -d "$env_dir" ]; then
            status "Exporting config vars to environment"
            export_env_dir $env_dir
        fi

        status "Found webpack, running webpack"
        $build_dir/node_modules/.bin/webpack --production
        else
            status "No webpack config found"
    fi
)